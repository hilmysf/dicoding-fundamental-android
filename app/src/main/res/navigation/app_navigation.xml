<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/upcoming_fragment"
        android:name="com.hilmysf.fundamental.presentation.upcoming.UpcomingFragment"
        android:label="fragment_upcoming"
        tools:layout="@layout/fragment_upcoming">
     </fragment>
    <fragment
        android:id="@+id/finished_fragment"
        android:name="com.hilmysf.fundamental.presentation.finished.FinishedFragment"
        android:label="fragment finished"

        tools:layout="@layout/fragment_finished">
        </fragment>

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.hilmysf.fundamental.presentation.home.HomeFragment"
        android:label="fragment home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_fragment_to_finished_fragment"
            app:destination="@id/finished_fragment"
            app:popUpTo="@id/app_navigation"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_home_fragment_to_upcoming_fragment"
            app:destination="@id/upcoming_fragment"
            app:popUpTo="@id/app_navigation"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>