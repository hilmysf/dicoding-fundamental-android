<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/image_vertical_placeholder"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_vertical_placeholder"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toTopOf="@id/content_vertical_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_vertical_placeholder"
        app:layout_constraintTop_toTopOf="@id/image_vertical_placeholder" />

    <View
        android:id="@+id/content_vertical_placeholder"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="#DDDDDD"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@id/image_vertical_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_vertical_placeholder"
        app:layout_constraintTop_toBottomOf="@id/title_vertical_placeholder"/>

</androidx.constraintlayout.widget.ConstraintLayout>